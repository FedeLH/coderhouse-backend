{{> header}}
<div class="user-container">
    {{#if user}}
        <div class="user" id={{user._id}}>
            {{#if user.first_name}}
                <p><strong>Nombre: </strong>{{user.first_name}}</p>
            {{/if}}
            {{#if user.last_name}}
                <p><strong>Apellido: </strong>{{user.last_name}}</p>
            {{/if}}
            {{#if user.gender}}
                <p><strong>Genero: </strong>{{user.gender}}</p>
            {{else}}            
                <p><strong>Genero: </strong>No disponible</p>
            {{/if}}
            <p><strong>Email: </strong>{{user.email}}</p>
            <p><strong>Rol: </strong>{{user.role}}</p>
            {{#if isPremium}}
                <button class="change-role">Dejar de ser premium</button>
            {{/if}}
            {{#if isUser}}
                <h1>Archivos requeridos para hacerse premium</h1>
                <form id="fileUploadForm">
                    <label for="file1">Identificaci√≥n:</label>
                    <input type="file" id="file1" name="files" accept=".pdf,.doc,.docx" required><br>

                    <label for="file2">Comprobante de domicilio:</label>
                    <input type="file" id="file2" name="files" accept=".pdf,.doc,.docx" required><br>

                    <label for="file3">Comprobante de estado de cuenta:</label>
                    <input type="file" id="file3" name="files" accept=".pdf,.doc,.docx" required><br>

                    <button type="submit">Enviar archivos</button>
                </form>
                <button class="change-role">Hacerme premium</button>
            {{/if}}
        </div>
    {{else}}
        <p>Usuario no disponible</p>
    {{/if}}
</div>
{{> footer}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/profile.js"></script>