<div>
    <h1>
        E-Commerce de tecnología
    </h1>
</div>
<div class="results-container">
    <p><strong>Total de resultados:</strong> {{paginate.totalDocs}}</p>
    <p><strong>Página:</strong> {{paginate.page}} de {{paginate.totalPages}}</p>
</div>
<div class="paginate-container">
    {{#if paginate.hasPrevPage}}
        <a href="/?page=1"><button class="paginate">Primera Página</button></a>
        <a href="/?page={{paginate.prevPage}}"><button class="paginate">Página Anterior</button></a>
    {{/if}}
    {{#if paginate.hasNextPage}}
        <a href="/?page={{paginate.nextPage}}"><button class="paginate">Página Siguiente</button></a>
        <a href="/?page={{paginate.totalPages}}"><button class="paginate">Última Página</button></a>
    {{/if}}
</div>
<div class="products-container">
    {{#each products}}
        <div class="product">
        <img class="thumbnails" src="{{firstItem thumbnails}}" alt="Imagen del producto">
        <h2>{{title}}</h2>
        <p class="description">{{description}}</p>
        <p>Precio: ${{price}}</p>
        <p>Stock:{{stock}}</p>
        <button class="add-to-cart">Añadir al carrito</button>
        </div>
    {{/each}}
</div>
